---
export interface Props {
  title: string;
  description: string;
  icon?: string;
  link?: string;
  color?: string;
}

const { title, description, icon, link, color = 'space-blue' } = Astro.props;
---

<div class="card group hover:scale-105 transition-transform duration-200">
  {icon && (
    <div class={`w-16 h-16 bg-${color} bg-opacity-10 rounded-full flex items-center justify-center mb-4 group-hover:bg-opacity-20 transition-colors`}>
      <span class={`text-${color} text-3xl`}>{icon}</span>
    </div>
  )}
  
  <h3 class="text-xl font-bold mb-3 text-text-dark">{title}</h3>
  <p class="text-text-gray mb-4">{description}</p>
  
  {link && (
    <a href={link} class={`text-${color} font-medium hover:underline inline-flex items-center`}>
      詳しく見る
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  )}
</div>