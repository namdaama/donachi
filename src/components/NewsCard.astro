---
export interface Props {
  title: string;
  date: string;
  category: string;
  excerpt: string;
  link: string;
}

const { title, date, category, excerpt, link } = Astro.props;

const categoryColors = {
  'お知らせ': 'bg-blue-100 text-blue-700',
  'イベント': 'bg-orange-100 text-orange-700',
  'レポート': 'bg-green-100 text-green-700',
  'その他': 'bg-gray-100 text-gray-700',
};

const categoryColor = categoryColors[category as keyof typeof categoryColors] || categoryColors['その他'];
---

<article class="card hover:shadow-xl transition-shadow duration-200">
  <div class="flex items-center gap-3 mb-3">
    <span class={`text-xs font-medium px-3 py-1 rounded-full ${categoryColor}`}>
      {category}
    </span>
    <time class="text-sm text-text-gray">{date}</time>
  </div>
  
  <h3 class="text-lg font-bold mb-2 text-text-dark">
    <a href={link} class="hover:text-space-blue transition-colors">
      {title}
    </a>
  </h3>
  
  <p class="text-text-gray mb-4 line-clamp-3">{excerpt}</p>
  
  <a href={link} class="text-space-blue font-medium hover:underline inline-flex items-center text-sm">
    続きを読む
    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </a>
</article>