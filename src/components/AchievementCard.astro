---
export interface Props {
  title: string;
  date: string;
  location?: string;
  description: string;
  image?: string;
}

const { title, date, location, description, image } = Astro.props;
---

<article class="card overflow-hidden">
  {image && (
    <div class="relative h-48 -mx-6 -mt-6 mb-4">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover"
      />
    </div>
  )}
  
  <div class="flex items-start justify-between mb-3">
    <h3 class="text-lg font-bold text-text-dark flex-1">{title}</h3>
  </div>
  
  <div class="text-sm text-text-gray mb-3 space-y-1">
    <p class="flex items-center">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      {date}
    </p>
    {location && (
      <p class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        {location}
      </p>
    )}
  </div>
  
  <p class="text-text-gray">{description}</p>
</article>