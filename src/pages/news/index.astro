---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import NewsCard from '../../components/NewsCard.astro';

// This would typically come from a CMS
const newsItems = [
  {
    title: '2024年夏休み特別プログラムの受付開始',
    date: '2024年5月1日',
    category: 'お知らせ',
    excerpt: '今年も夏休み期間中の特別科学教室を開催します。人気のプログラムは早めのご予約をお勧めします。',
    link: '/news/summer-2024'
  },
  {
    title: '新プログラム「探求学習コース」スタート',
    date: '2024年4月15日',
    category: 'お知らせ',
    excerpt: '科学的思考力を育む新しいプログラムを開始しました。小学3年生から6年生が対象です。',
    link: '/news/new-program'
  },
  {
    title: '春の星空観望会レポート',
    date: '2024年3月25日',
    category: 'レポート',
    excerpt: '春の大三角形と北斗七星を観察した観望会の様子をレポートします。',
    link: '/news/spring-stargazing'
  },
  {
    title: 'ゴールデンウィーク特別イベントのお知らせ',
    date: '2024年4月1日',
    category: 'イベント',
    excerpt: 'GW期間中、科学実験ショーと星空観望会を特別開催します。ご家族でお楽しみください。',
    link: '/news/gw-event'
  },
  {
    title: 'スタッフ研修会を実施しました',
    date: '2024年3月10日',
    category: 'レポート',
    excerpt: '新年度に向けて、より良いプログラムを提供するためのスタッフ研修会を行いました。',
    link: '/news/staff-training'
  },
  {
    title: 'Webサイトをリニューアルしました',
    date: '2024年3月1日',
    category: 'お知らせ',
    excerpt: 'より見やすく、使いやすいWebサイトにリニューアルしました。',
    link: '/news/website-renewal'
  }
];

const categories = ['すべて', 'お知らせ', 'イベント', 'レポート'];
---

<Layout title="お知らせ">
  <Header />
  
  <main class="flex-grow">
    <Hero 
      title="お知らせ・ブログ"
      subtitle="最新情報をお届けします"
    />
    
    <section class="py-16 md:py-24">
      <div class="container-custom">
        <!-- Category Filter -->
        <div class="flex flex-wrap gap-2 justify-center mb-12">
          {categories.map((category) => (
            <button 
              class={`px-6 py-2 rounded-full font-medium transition-colors duration-200
                ${category === 'すべて' 
                  ? 'bg-space-blue text-white' 
                  : 'bg-gray-200 text-text-gray hover:bg-gray-300'}`}
            >
              {category}
            </button>
          ))}
        </div>
        
        <!-- News Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {newsItems.map((news) => (
            <NewsCard {...news} />
          ))}
        </div>
        
        <!-- Pagination -->
        <div class="flex justify-center gap-2">
          <button class="px-4 py-2 rounded bg-gray-200 text-text-gray" disabled>
            前へ
          </button>
          <button class="px-4 py-2 rounded bg-space-blue text-white">
            1
          </button>
          <button class="px-4 py-2 rounded bg-gray-200 text-text-gray hover:bg-gray-300">
            2
          </button>
          <button class="px-4 py-2 rounded bg-gray-200 text-text-gray hover:bg-gray-300">
            次へ
          </button>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>